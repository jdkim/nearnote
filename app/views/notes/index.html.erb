<h1>Notes</h1>

<%= link_to "Create", new_note_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Updated at</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, note_path(note) %></td>
        <td class="note-body"><%= note.body %></td>
        <td><%= note.updated_at %></td>
        <td><%= note.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @notes %>
