<h1>New Guideline</h1>

<%= form_with(model: @annotation_guideline) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body, id: "annotation_guideline_textarea" %>
  </div>

  <div><%= f.submit 'Create' %></div>
<% end %>

<%= javascript_import_module_tag 'initializeEasyMDE' %>
