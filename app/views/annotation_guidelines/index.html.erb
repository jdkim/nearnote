<h1>AnnotationGuidelines</h1>

<%= link_to "Create", new_annotation_guideline_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Updated at</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @annotation_guidelines.each do |guideline| %>
      <tr>
        <td><%= link_to guideline.title, annotation_guideline_path(guideline) %></td>
        <td class="guideline-body"><%= guideline.body %></td>
        <td><%= guideline.updated_at %></td>
        <td><%= guideline.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @annotation_guidelines %>
